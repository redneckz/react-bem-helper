    onKeyUp?: (SyntheticKeyboardEvent<any>) => any,
    onChange?: (SyntheticEvent<any>) => any,
    onInput?: (SyntheticEvent<any>) => any,
    onInvalid?: (SyntheticEvent<any>) => any,
    onSubmit?: (SyntheticEvent<any>) => any,
